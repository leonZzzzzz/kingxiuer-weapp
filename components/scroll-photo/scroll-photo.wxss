/* 图片滚动 */
.color-guide {
  display: flex;
}

.color-guide .label {
  width: 95rpx;
  font-size: 22rpx;
  color: #cca955;
}

.scroll-photo {
  padding: 20rpx 20rpx 0;
}

.scroll-photo  .scroll-photo_header {
  margin-bottom: 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.scroll-photo  .scroll-photo_header .scroll-photo_year {
  padding: 2rpx 0;
  padding-right: 12rpx;
  font-size: 24rpx;
  color: #fff;
  line-height: 1;
  background: #ff8b8b;
  border-radius: 0 8px 8px 0;
}

.scroll-photo .scroll-photo_header .scroll-photo_intro {
  font-size: 28rpx;
  padding: 4rpx 30rpx;
  line-height: 1;
  /* background: #ff8b8b; */
  border: 1px solid #ff8b8b;
  border-radius: 20px;
  color: #ff8b8b;
}

.scroll-photo .scroll-photo_content {
  height: 460rpx;
}

.scroll-photo .scroll-photo_content .scroll-photo_list {
  position: relative;
  border-bottom: 1px solid #fff;
}
.scroll-photo .scroll-photo_content .scroll-photo_list .content{
  transform: translateX(-120rpx);
  transition: all 1s;
}
.scroll-photo .scroll-photo_content .scroll-photo_list .del{
  position: absolute;
  right: 0;
  top: 0;
  background-color: orangered;
  width: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  height: 40px;
  transform: translateX(120rpx);  
  transition: all 0.1s;
  }
  .touch-move-active .content{
  transform: translateX(0rpx) !important;
  transition: all 1s !important;
}



.scroll-photo .scroll-photo_content  .scroll-photo_list .scroll-photo_date {
  float: left;
  font-size: 22rpx;
  color: #712726;
}

.scroll-photo .scroll-photo_content  .scroll-photo_list .scroll-photo_img-wrap {
  position: relative;
  height: 40px;
  margin-left: 85rpx;
  overflow: hidden;
}

.scroll-photo .scroll-photo_content  .scroll-photo_list .image {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 40px !important;
  border: 1px solid #FFCECE;
}

.scroll-photo .scroll-photo_content .scroll-photo_list .scroll-photo_time,
.scroll-photo .scroll-photo_content .scroll-photo_list .scroll-photo_state {
  position: absolute;
  width: 110rpx;
  height: 40px;
  box-sizing: border-box;
  padding-left: 20rpx;
  line-height: 40px;
  font-size: 28rpx;
  color: #fff;
}

.scroll-photo .scroll-photo_content .scroll-photo_list .scroll-photo_state {
  font-size: 24rpx;
  top: 0;
  right: 0;
}

.scroll-photo .scroll-photo_content .scroll-photo_list .scroll-photo_state text {
  color: #fff;
}

.scroll-photo .scroll-photo_content .scroll-photo_list .scroll-photo_time {
  top: 0;
  left: 85rpx;
  /* background: rgba(0, 0, 0, 0.5); */
  background-color: #f9f0f0;
  color: #9A7475;
}
