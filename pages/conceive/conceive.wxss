page {
  height: 100%;
}

#header {
  height: 180rpx;
  line-height: 1;
  text-align: center;
}

#header .title {
  padding: 70rpx 0 16rpx;
  font-size: 34rpx;
  color: #e1738f;
}

#header .explain {
  font-size: 26rpx;
  color: #efadbc;
}

/* 背景层 */

.bgPoster {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 222;
}

.posterBox {
  position: relative;
  z-index: 333;
  width: 600rpx;
  height: 800rpx;
  margin:100rpx auto 0;
  box-sizing: border-box;
  background: #fff;
  overflow: hidden
}

.posterBox .p-Img {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 560rpx;
}

.p-BtnWrap {
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 15rpx;
  padding:10rpx 0;
  font-size: 28rpx;
  background: #fff;
}

.posterBox .p-btn {
  padding: 4px 5px;
  line-height: 1;
  font-size: 28rpx;
  border-radius: 0;
  color: #555;
  background: #fff;
}

.posterBox .p-btn .iconfont {
  font-size: 40rpx;
  color: #cfab55;
  text-align: center;
  padding-bottom: 3px;
}

.bgPoster .s-text {
  position: absolute;
  top: 50rpx;
  right: 180rpx;
  font-size: 38rpx;
  font-weight: bolder;
  color: #fff;
}

.bgPoster .s-text .zhiShi {
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  font-size: 50rpx;
  color: #fff;
}

#footer {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 275rpx;
  background: #efe9de;
  text-align: center;
  font-size: 32rpx;
  position: fixed;
  left: 0;
  bottom: 0;
}

#footer .icon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #cca955;
}

#footer .text {
  margin-top: 16rpx;
  color: #cca955;
}
