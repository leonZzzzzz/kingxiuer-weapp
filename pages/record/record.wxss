.header {
  margin-bottom: 112rpx;
  height: 266rpx;
  background-image: linear-gradient(180deg, rgba(255, 202, 232, 0.5) 50%, rgba(255, 202, 232, 0.8) 100%);
}

.header .title {
  padding: 60rpx 0 50rpx;
  line-height: 1;
  font-size: 32rpx;
  color: #555;
  text-align: center;
}

.header .item {
  display: flex;
  justify-content: space-around;
}

.header .item .list {
  font-size: 28rpx;
  text-align: center;
  color: #555;
}

.header .wrap {
  position: relative;
}

.header .wrap .item .list .step {
  margin: 0 auto 16rpx;
  width: 36rpx;
  height: 36rpx;
  font-size: 26rpx;
  background: #fcd9ef;
  border: 1px solid #cca955;
  border-radius: 50%;
}

.header .wrap .line {
  position: absolute;
  z-index: -1;
  top: 20rpx;
  left: 50%;
  width: 70%;
  height: 1rpx;
  background: #cca955;
  transform: translateX(-50%);
}

.input-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 496rpx;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 40rpx;
  margin: 0 auto 60rpx;
  font-size: 30rpx;
  background: #fec9e7;
  border-radius: 50px;
  box-shadow: 0 0 0px 20rpx rgba(254, 228, 243, 0.8);
}

.input-wrap .value {
  color: #555;
}

.input-wrap input {
  width: 60rpx;
}

.btn-wrap {
  display: flex;
  width: 576rpx;
  padding: 0 40rpx;
  margin: 0 auto;
}

.btn-next {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 20rpx;
  background: #cca955;
  border-radius: 50px;
  font-size: 32rpx;
  color: #fff;
}

.btn-next:nth-child(2) {
  margin-left: 100rpx;
}

.footer {
  position: absolute;
  bottom: 25rpx;
  width: 576rpx;
  font-size: 28rpx;
  left: 100rpx;
}

.label {
  position: absolute;
}

.input-wrap input,.input-wrap .value  {
  width: 100%;
  text-align: right;
}

.authorize-wrap {
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 5000;
}

.authorize-box {
  position: fixed;
  top: 46%;
  left: 50%;
  width: 80%;
  margin: 0 auto;
  border-radius: 12rpx;
  background: #fff;
  transform: translate(-50%, -50%);
}

.authorize-box .title {
  text-align: center;
  font-size: 32rpx;
  padding: 20rpx 40rpx;
  color: #333;
}

.authorize-box .msg {
  text-align: center;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  line-height: 1.4;
  color: #888;
}

.authorize-box .btns {
  display: flex;
  align-content: center;
  text-align: center;
  border-top: 1rpx solid #eee;
  margin-top: 40rpx;
}

.authorize-box .btns .btn{
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #888;
  background: #fff;
  border-radius: 12rpx;
}

.authorize-box .btns .confirm-btn{
  color: #b69138;
  position: relative;
}

.authorize-box .btns .confirm-btn::before{
  content: ' ';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  border-left: 1rpx solid #eee;
}