.header {
  margin-bottom: 112rpx;
  height: 266rpx;
  background-image: linear-gradient(180deg, rgba(255, 202, 232, 0.5) 50%, rgba(255, 202, 232, 0.8) 100%);
}
.header .ques{
  width:25px;
  height:25px;
  position:absolute;
  top:10px;
  right:10px;
  font-size:14px;
  line-height:25px;
  font-weight:900;
  text-align:center;
  border-radius:50%;
  color:#fff;
  background:#cca955;
}
.header .title {
  color: #555;
  padding:100rpx 0 20rpx;
  font-size: 38rpx;
  text-align: center;
}
.header .tip {
  text-align:center;
  font-size:28rpx;
  color:#636363;
}

.header .item {
  display: flex;
  justify-content: space-around;
}

.header .item .list {
  font-size: 28rpx;
  text-align: center;
  color: #555;
}

.header .wrap {
  position: relative;
}

.header .wrap .item .list .step {
  margin: 0 auto 16rpx;
  width: 36rpx;
  height: 36rpx;
  font-size: 26rpx;
  background: #fcd9ef;
  border: 1px solid #cca955;
  border-radius: 50%;
}

.header .wrap .line {
  position: absolute;
  z-index: -1;
  top: 20rpx;
  left: 50%;
  width: 70%;
  height: 1rpx;
  background: #cca955;
  transform: translateX(-50%);
}

.input-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 496rpx;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 40rpx;
  margin: 0 auto 80rpx;
  font-size: 30rpx;
  background: #fec9e7;
  border-radius: 50px;
  box-shadow: 0 0 0px 20rpx rgba(254, 228, 243, 0.8);
}

.input-wrap .value {
  color: #555;
}

.input-wrap input {
  width: 60rpx;
}

.btn-wrap {
  display: flex;
  width: 576rpx;
  padding: 0 40rpx;
  margin: 0 auto;
}

.btn-next {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 30rpx;
  background: #cca955;
  border-radius: 50px;
  font-size: 32rpx;
  color: #fff;
}

.btn-next:nth-child(2) {
  margin-left: 100rpx;
}

.footer {
  position: absolute;
  bottom: 60rpx;
  width: 576rpx;
  font-size: 28rpx;
  left: 100rpx;
}
.label {
  position: absolute;
}

.input-wrap input {
  width: 100%;
  text-align: right;
}