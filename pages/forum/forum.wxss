/* pages/forum/forum.wxss */
/* dot右下角 */
page{
  background:#f6f6f6;
}
button {
  display: inline-block;
  margin-left: 0;
  margin-right: 0;
  padding-left: 0;
  padding-right: 0;
  box-sizing: border-box;
  font-size: 18px;
  text-align: center;
  text-decoration: none;
  line-height: 1;
  border-radius: 5px;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #000;
  background-color: #fff;
}
  
button::after {
  border: none;
  background-color:#fff;
  line-height: 0;
  margin-left:none;
}
.linecolor{
  background-image: linear-gradient(#fF9A9A, #fff);
  /* background: -moz-linear-gradient( top,#fF9A9A,#fff); */
}
.search{
  display: flex;
  /* background: #fff; */
  justify-content: space-between;
  /* padding: 20rpx; */
  position:fixed;
  background:#fF9A9A;
  width:100%;
  /* top:56rpx; */
  z-index:8888;
  padding:20rpx 0;
}
.search>input{
  width: 540rpx;
  background: #fff;
  border-radius: 50rpx;
  height: 58rpx;
  text-align: center;
  margin-left:20rpx;
}
.search>view{
  line-height:50rpx;
  font-size:28rpx;
  border-radius: 40rpx;
  padding:5rpx 30rpx;
background:#fff;
color:#ff9e9e;
margin-right:20rpx;
}
.swiper-item>image{
  width:100%;
  height:275rpx;
  border-radius: 15rpx;
  margin-top:12rpx;
}
.wx-swiper-dots.wx-swiper-dots-horizontal {
  width: 90%;
  text-align: right;
}

.fabu_btn{
  width: 150rpx;
  height: 70rpx;
  border-radius: 50rpx;
  color: #fff !important;
  background-color: #ff9e9e !important;
  padding: 0;
  text-align: center;
  line-height: 70rpx;
  border: none !important;
  font-size: 30rpx;
  position: fixed;
  bottom: 20rpx;
  left: 50%;
  transform: translate(-50%);
}
.nav{
  display: flex;
  /* flex-wrap:wrap; */
  /* justify-content: space-between; */
  /* width: 100%; */
  background-color: #fff;
  /* padding:35rpx 25rpx; */
  font-size:30rpx;
}
.nav_img{
  text-align: center;
  width:165rpx;
